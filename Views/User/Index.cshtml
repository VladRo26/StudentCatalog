@model List<UserModel>
@using StudentCatalog.Logic

@{
    ViewData["Title"] = "Users";
}

<h1>User Management</h1>

<table class="table" id="usersTable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserModel user in Model)
        {
            <tr data-user-id="@user.Id">
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Username</td>
                <td>@user.Phone</td>
                <td>
                    <select asp-for="@user.Role" class="form-control role-dropdown"
                            asp-items="Html.GetEnumSelectList<UserType>()">
                    </select>
                </td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="saveChanges('@user.Id')">Save</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button id="addBtn" class="btn btn-success" onclick="location.href='@Url.Action("AddUser", "User")'">Add User</button>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            window.saveChanges = function (userId) {
                var role = $(`#usersTable tr[data-user-id="${userId}"] .role-dropdown`).val();
                $.ajax({
                    url: '/User/UpdateUserRole', 
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ userId: userId, role: role }),
                    success: function (result) {
                        if (result.success) {
                            alert('Role updated successfully!');
                        } else {
                            alert('Error: ' + result.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error updating role: ' + error);
                        console.log(status, xhr.responseText);
                    }
                });
            };
        });
    </script>
}
