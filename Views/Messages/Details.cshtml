@model StudentCatalog.Models.MessagesModel

@{
    ViewBag.Title = "Message Details";
}

<h2>Message Details</h2>

<dl class="dl-horizontal">
    <dt>Sender</dt>
    <dd>@Model.Sender.FirstName @Model.Sender.LastName</dd>

    <dt>Message</dt>
    <dd>@Model.Message</dd>

    <dt>Timestamp</dt>
    <dd>@Model.TimeStamp.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
</dl>

<p>@Html.ActionLink("Back to Inbox", "Inbox")</p>
